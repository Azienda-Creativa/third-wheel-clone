{{#each response}}
  <div class="row justify-content-center align-items-center m-5">

    <div class="col-5">
      <div class="card shadow-sm">
        <img src="{{this.image}}" alt="" />
        <div class="card-body">
          <h3>{{this.title}}</h3><span>{{this.price}}$</span>
          <p class="card-text">{{this.description}}.</p>
          {{this.price}}
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <form action="/product/{{this._id}}/edit" method="GET">
                <button class="btn btn-sm btn-outline-secondary" type="submit">Edit</button>
              </form>
              <form action="/allListings" method="POST">
                <input type="hidden" name="id" value="{{this._id}}" />
                <button class="btn btn-sm btn-outline-secondary" type="submit">Delete</button>
              </form>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

{{/each}}