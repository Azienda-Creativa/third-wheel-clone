{{#each response}}
  <div class="row justify-content-center align-items-center m-5">
    <div class="col-6">
      <div class="card shadow-sm">
        <div class="container-fluid">
          <div class="row justify-content-around">
            {{#each this.image}}
              <div class="col-lg-3 col-sm-6 mt-3 mb-1 d-flex justify-content-center align-items-center">
                <img src="{{this}}" class="img-fluid">
              </div>
            {{/each}}
          </div>
        </div>
        <hr>
        <div class="card-body">
          <h1>{{this.title}}</h1><h3 class="text-muted">{{this.price}}$</h3>
          <h5 class="card-text">{{this.description}}.</h5>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <form action="/product/{{this._id}}/edit" method="GET">
                <button class="btn btn-sm btn-outline-secondary" type="submit">Edit</button>
              </form>
              <form action="/allListings" method="POST">
                <input type="hidden" name="id" value="{{this._id}}" />
                <button class="btn btn-sm btn-outline-secondary" type="submit">Delete</button>
              </form>
              <form action="/product/{{this._id}}" method="GET">
                <button class="btn btn-sm btn-outline-secondary" type="submit">Go To</button>
              </form>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

{{/each}}