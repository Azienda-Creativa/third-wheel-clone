<div class="container-fluid justify-content-center px-4 py-5" id="custom-cards">
  <h2 class=" pb-2 border-bottom">Featured products</h2>
  {{#each data}}
  <div class="d-flex justify-content-center">
    <div class=" ">
      <div class="d-flex justify-content-center card p-2 m-2">
        <div>

        <img src="{{this.image}}" class="img-fluid card-img-top" style="width:600px; height: auto" >

        </div>
        <div class="d-flex card-body justify-content-center">
        <div>

          <h5 class="d-flex card-title">{{this.brand}}</h5>
          <p class="card-text">{{this.price}}$</p>
          <div class="text-primary">
            {{this.condition}}
          </div>
        

        </div>
            
          <div class="container-fluid justify-content-end">

          <form action="/product/{{this._id}}" method="GET" class="d-flex justify-content-center">
          
            <button class="btn btn-primary border-rad m-2" id="buyButton">Go to product</button>
          </form>

          </div>
        </div>
      </div>
    </div>  
  </div>
</div>
  {{/each}}